local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

-- Tạo Cửa Sổ Chính
local Window = Fluent:CreateWindow({
    Title = "PhucDzai Hub | Blox Fruits ",
    SubTitle = "Version 1.0 (Freemium)", 
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true, 
    Theme = "Dark", 
    MinimizeKey = Enum.KeyCode.LeftControl 
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main Farm", Icon = "home" }),
    Stats = Window:AddTab({ Title = "Stats & Items", Icon = "bar-chart" }),
    Teleport = Window:AddTab({ Title = "Teleports", Icon = "map-pin" }),
    Dungeon = Window:AddTab({ Title = "Raid & Dungeon", Icon = "swords" }),
    Shop = Window:AddTab({ Title = "Shop & Fruit", Icon = "shopping-cart" }),
    Settings = Window:AddTab({ Title = "Settings / Info", Icon = "settings" })
}

local Options = Fluent.Options

-- =========================
Tabs.Main:AddSection("General Farming")

Tabs.Main:AddToggle("AutoFarmLevel", {Title = "Auto Farm Level (Fast)", Default = false, Description = "Tự động nhận quest và cày cấp." })
Tabs.Main:GetElement("AutoFarmLevel"):OnChanged(function()
    Fluent:Notify({Title = "Thông báo", Content = "Chức năng Farm Level đã được bật/tắt (Demo UI)", Duration = 3})
end)

Tabs.Main:AddDropdown("SelectWeapon", {
    Title = "Select Weapon (Chọn Vũ Khí)",
    Values = {"Melee", "Sword", "Blox Fruit"},
    Default = "Melee",
    Multi = false,
})

Tabs.Main:AddToggle("FastAttack", {Title = "Fast Attack / No Delay", Default = true, Description = "Đánh nhanh không delay." })

Tabs.Main:AddSection("Mob Farming")
Tabs.Main:AddToggle("FarmNearest", {Title = "Farm Nearest Mob (Quái gần nhất)", Default = false })
Tabs.Main:AddToggle("FarmChest", {Title = "Auto Farm Chest (Gom Rương)", Default = false })


-- =========================
-- TAB 2: STATS & ITEMS
-- =========================
Tabs.Stats:AddSection("Auto Stats (Tự cộng điểm)")

Tabs.Stats:AddToggle("AutoStatsMelee", {Title = "Auto Melee", Default = false })
Tabs.Stats:AddToggle("AutoStatsDefense", {Title = "Auto Defense", Default = false })
Tabs.Stats:AddToggle("AutoStatsSword", {Title = "Auto Sword", Default = false })
Tabs.Stats:AddToggle("AutoStatsFruit", {Title = "Auto Blox Fruit", Default = false })

Tabs.Stats:AddSection("Item Quest (Lấy đồ)")
Tabs.Stats:AddButton({
    Title = "Get Cursed Dual Katana (CDK)",
    Description = "Yêu cầu đủ điều kiện.",
    Callback = function() Fluent:Notify({Title = "Banana Cat Hub", Content = "Đang thử nhận nhiệm vụ CDK...", Duration = 3}) end
})
Tabs.Stats:AddButton({
    Title = "Get Soul Guitar",
    Description = "Yêu cầu đủ nguyên liệu.",
    Callback = function() end
})


-- =========================
-- TAB 5: SHOP & FRUIT
-- =========================
Tabs.Shop:AddSection("Fruit Sniper (Săn Trái Ác Quỷ)")
Tabs.Shop:AddToggle("AutoBuyFruit", {Title = "Auto Buy From Cousin (Random)", Default = false })
Tabs.Shop:AddToggle("AutoStoreFruit", {Title = "Auto Store Fruit (Cất trái vào kho)", Default = true })

Tabs.Shop:AddSection("ESP Fruit")
Tabs.Shop:AddToggle("ESPFruit", {Title = "ESP Fruit (Nhìn xuyên tường thấy trái)", Default = false })


-- =========================
-- TAB 6: SETTINGS / INFO
-- =========================
Tabs.Settings:AddSection("Information")
Tabs.Settings:AddLabel("Hub Name: Banana Cat Hub")
Tabs.Settings:AddLabel("Status: Working (2026)")
Tabs.Settings:AddLabel("Creator: Banana Cat Team")

